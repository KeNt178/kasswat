{
    "manifest_version": 2,

    "name": "kasswat",
    "description": "Get rid of Facebook / Google / Amazon ads & sponsored content",
    "version": "0.1.4.1",
    "icons": {
        "512": "icon.png"
    },

    "browser_action": {
        "default_icon": "icon.png"
    },

    "background": {
        "scripts": [
            "jquery.min.js",
            "background.js"]
    },

    "permissions": [
        "activeTab"
    ],

    "content_scripts": [{
        "js": [ "jquery.min.js", "background.js"],
        "matches": [ "http://www.facebook.com/*", "https://www.facebook.com/*", "http://www.google.com/*", "https://www.google.com/*", "http://www.google.fr/*", "https://www.google.fr/*", "http://www.amazon.com/*", "https://www.amazon.com/*", "http://www.amazon.fr/*", "https://www.amazon.fr/*"]
    }]
}
